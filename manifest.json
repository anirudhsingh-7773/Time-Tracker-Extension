{
  "manifest_version": 3,
  "name": "Keka Office Hours",
  "version": "1.0",
  "description": "This extension automatically tracks and shows your office hours on Keka.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "icons": {
    "48": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting" 
  ],
  "host_permissions": [
    "https://innoraft.keka.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://innoraft.keka.com/*"],
      "js": ["content_script.js"]
    }
  ]
}
